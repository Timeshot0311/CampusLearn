rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Rules for user avatars
    match /avatars/{userId}/{allPaths=**} {
      allow read;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Rules for course files
    match /courses/{courseId}/{allPaths=**} {
      allow read;
      // Allow write if user is authenticated (simplification, could be restricted to tutors/admins)
      allow write: if request.auth != null;
    }

    // Rules for assignment submissions
    match /submissions/{courseId}/{assignmentId}/{studentId}/{fileName} {
      // Allow read for any authenticated user (e.g., tutors, admins, or the student themselves)
      allow read: if request.auth != null;
      // Only allow a student to write to their own submission path
      allow write: if request.auth != null && request.auth.uid == studentId;
    }
    
    // Rules for topic materials
    match /topics/{topicId}/{allPaths=**} {
      allow read;
      // Allow write for any authenticated user
      allow write: if request.auth != null;
    }
  }
}
