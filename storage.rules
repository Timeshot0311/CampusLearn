rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper functions
    function isAuth() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Allow read access to all files by anyone. 
    // This is a simple rule for now; you might want to make it more restrictive.
    match /{allPaths=**} {
      allow read;
    }

    // Allow users to write to their own folder in /users/{userId}/*
    match /users/{userId}/{allPaths=**} {
      allow write: if isAuth() && isOwner(userId);
    }
    
    // Allow tutors/lecturers/admins to upload to /topics/{topicId}/*
    match /topics/{topicId}/{allPaths=**} {
      // In a real app, you'd verify the user's role here, similar to Firestore rules.
      // For simplicity, we'll just check if they are authenticated.
      allow write: if isAuth(); 
    }
  }
}
