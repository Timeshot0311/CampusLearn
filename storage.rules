rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow read access to all files
    match /{allPaths=**} {
      allow read;
    }

    // Allow uploads for authenticated users in a 'courses' directory
    match /courses/{courseId}/{allPaths=**} {
      allow write: if request.auth != null;
    }

    // Allow uploads for authenticated users in a 'topics' directory
    match /topics/{topicId}/{allPaths=**} {
      allow write: if request.auth != null;
    }
  }
}
