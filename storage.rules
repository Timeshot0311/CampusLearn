rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Default deny all reads and writes
    match /{allPaths=**} {
      allow read, write: if false;
    }

    // Allow public read access to course and topic materials
    match /courses/{courseId}/{allPaths=**} {
      allow read;
      // Allow writes only by authenticated users.
      // For production, you'd want a Cloud Function to verify roles (e.g., admin/lecturer).
      allow write: if request.auth != null;
    }

    match /topics/{topicId}/{allPaths=**} {
      allow read;
      // Allow writes only by authenticated users (students creating topics, tutors adding material).
      allow write: if request.auth != null;
    }

    // Allow a user to upload/update their own avatar.
    match /avatars/{userId}/{fileName} {
      allow read;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
